@model IEnumerable<AddressBookApp.ViewModels.ContactListItemViewModel>

@{
    ViewBag.Title = "Index";
}

@section scripts {
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/custom/contact-list")
}

@section styles {
    @Styles.Render("~/styles/dataTables")
    @Styles.Render("~/styles/contact-list")
}

@{
    Html.RenderPartial("Partials/Common/_Confirmation");
}

<h2>Contact list</h2>

<p>   
    @Html.ActionLink("Create new contact", "Create", "Contacts", null,
    new
    {
        @class = "btn btn-success"      
    })
</p>
<table id="contacts-list" class="table table-striped table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>   
            <th>
                @Html.DisplayNameFor(model => model.Emails)
            </th>   
            <th>
                @Html.DisplayNameFor(model => model.Addresses)
            </th>                   
            <th></th>
        </tr>
    </thead> 
    <tfoot>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses)
            </th>            
        </tr>
    </tfoot>  
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                </td>
                <td>
                </td>
                <td>                   
                    @Html.ActionLink("Edit", "Edit", new { @id = item.Id },
                   new
                   {
                       @class = "glyphicon glyphicon-edit"
                   })    

                    @Html.ActionLink("Delete", "Delete", "Contacts", new { @id = item.Id},
                    new
                    {
                        @class = "glyphicon glyphicon-trash modal-link"                        
                    })                                            
                </td>
            </tr>
        }
    </tbody>   
</table>

